        }
        $('option', select).remove();


        $.getJSON( site_url+'/canhan/capnhatthongtin/gethuyen/tid/'+tinh_id, function( data ) {            
            $.each( data, function( key, val ) {
                select.append('<option value="'+val.id+'">'+val.name+'</option>');
            });
        });
    }
